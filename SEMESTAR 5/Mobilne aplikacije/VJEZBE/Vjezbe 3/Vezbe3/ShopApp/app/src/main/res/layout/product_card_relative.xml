<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@drawable/border_background"
    android:padding="10dp"
    >
    <ImageView
        android:id="@+id/image1"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/samsung_galaxy_s23_ultra"
        android:contentDescription="@string/samsung_galaxy_s23_ultra_white" />
    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:text="@string/samsung_galaxy_s23_ultra_white"
        android:layout_toEndOf="@id/image1"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="5dp"
        android:text="@string/samsung_galaxy_s23_ultra_white"
        android:layout_below="@id/text1"
        android:layout_toEndOf="@id/image1"
        android:textSize="14sp"
        android:textStyle="italic"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@drawable/round_border_background"
        android:contentDescription="@string/cart"
        app:srcCompat="@drawable/ic_shop_cart"
        android:layout_below="@id/text2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>