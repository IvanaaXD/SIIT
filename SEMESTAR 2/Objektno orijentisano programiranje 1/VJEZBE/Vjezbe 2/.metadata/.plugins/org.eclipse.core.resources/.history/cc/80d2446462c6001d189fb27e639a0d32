package vjezbe_2;

public class zadatak15 {

	public static void main(String[] args) {

		int n = 7;
		String minus = "-";
		String zvijezda = "*";
		String wuhu = "";
		
		int brojac = n;
		for (int i = 0; i < n*2; i++) {
			wuhu = minus.repeat(brojac) + zvijezda + minus.repeat(brojac);
			System.out.println(wuhu);
			brojac -= 1;
		}
		
	}

}
